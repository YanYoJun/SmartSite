<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:paddingLeft="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/lab_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/msg"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:id="@+id/conlayout_vcr"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_vcr"
            android:layout_width="51dp"
            android:layout_height="44dp"
            app:srcCompat="@mipmap/video_red"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/lab_vcr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/frag_msg_vcr"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/img_vcr"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/lab_vcr_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:text="@string/frag_msg_vcr_des_temp"
            android:textColor="@color/des_text_color"
            app:layout_constraintLeft_toRightOf="@+id/img_vcr"
            app:layout_constraintTop_toBottomOf="@+id/lab_vcr" />

        <TextView
            android:id="@+id/lab_vcr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:21"
            android:textColor="@color/des_text_color"
            android:textSize="14sp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lab_vcr_time"
            app:srcCompat="@android:drawable/ic_media_next"
            tools:layout_editor_absoluteX="339dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/conlayout_environ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/img_environ"
            android:layout_width="51dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/video_red" />

        <TextView
            android:id="@+id/lab_environ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/frag_msg_environment_watch"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/img_environ"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lab_environ_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="NXC-05检测到PM超标"
            android:textColor="@color/des_text_color"
            app:layout_constraintLeft_toRightOf="@+id/img_environ"
            app:layout_constraintTop_toBottomOf="@+id/lab_environ" />

        <TextView
            android:id="@+id/lab_environ_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="11:21"
            android:textColor="@color/des_text_color"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lab_environ_time"
            app:srcCompat="@android:drawable/ic_media_next"
            tools:layout_editor_absoluteX="339dp" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/conlayout_thirpartite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/img_thirpartite"
            android:layout_width="51dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/video_red" />

        <TextView
            android:id="@+id/lab_thirpartite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/frag_msg_synergy"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/img_thirpartite"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="您已经发送了一份巡查报告"
            android:textColor="@color/des_text_color"
            app:layout_constraintLeft_toRightOf="@+id/img_thirpartite"
            app:layout_constraintTop_toBottomOf="@+id/lab_thirpartite" />

        <TextView
            android:id="@+id/lab_thirpartite_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="11:21"
            android:textColor="@color/des_text_color"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lab_thirpartite_time"
            app:srcCompat="@android:drawable/ic_media_next"
            tools:layout_editor_absoluteX="339dp" />
    </android.support.constraint.ConstraintLayout>




</LinearLayout>