<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.isoftstone.smartsite.model.tripartite.ui.AddReportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        style="@style/toolbar_style"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_back_press_bg"
                android:onClick="onBackBtnClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/bigarrow" />

            <TextView
                android:id="@+id/lab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/add_report"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_back_press_bg"
                android:gravity="center"
                android:onClick="onBtnSaveClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/save"
                android:textColor="@color/title_save"
                android:textSize="12sp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_address" />

                <ImageView
                    android:id="@+id/img_address_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/droparrow" />

                <TextView
                    android:id="@+id/spinner_report_address"
                    style="@style/add_report_spinner"
                    android:layout_toLeftOf="@id/img_address_down"
                    android:background="@null"
                    android:gravity="right"
                    android:onClick="onSpinnerReportAddressClicked"
                    android:text="请选择"
                    android:textColor="@color/des_text_color"></TextView>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/shape_listview_year_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_company" />

                <EditText
                    android:id="@+id/edit_add_report"
                    style="@style/add_report_edittext" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/shape_listview_year_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_status" />

                <ImageView
                    android:id="@+id/img_status_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/droparrow" />

                <TextView
                    android:id="@+id/spinner_report_status"
                    style="@style/add_report_spinner"
                    android:layout_toLeftOf="@id/img_status_down"
                    android:background="@null"
                    android:gravity="right"
                    android:onClick="onSpinnerReportAddressClicked"
                    android:text="请选择"
                    android:textColor="@color/des_text_color"></TextView>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/shape_listview_year_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_types" />

                <ImageView
                    android:id="@+id/img_types_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/droparrow" />

                <TextView
                    android:id="@+id/spinner_report_types"
                    style="@style/add_report_spinner"
                    android:layout_toLeftOf="@id/img_types_down"
                    android:background="@null"
                    android:gravity="right"
                    android:text="请选择"
                    android:textColor="@color/des_text_color"></TextView>

            </RelativeLayout>

            <!-- 建设单位 默认不显示-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_build_company" />

                <EditText
                    android:id="@+id/inspect_report_build_company"
                    style="@style/add_report_edittext" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/shape_listview_year_bg" />

            <!-- 施工单位，默认不显示-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_construction_company" />

                <EditText
                    android:id="@+id/inspect_report_construction_company"
                    style="@style/add_report_edittext" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/shape_listview_year_bg" />

            <!-- 监理单位，默认不显示-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_supervision_company" />

                <EditText
                    android:id="@+id/inspect_report_supervision_company"
                    style="@style/add_report_edittext" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/default_head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/img_head"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lab_report_people_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三峰"
                        android:textColor="@color/main_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/inspect_report_report_people"
                        android:textColor="@color/hit_text_color"
                        android:textSize="10dp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_check_people" />

                <EditText
                    android:id="@+id/edit_inspect_report_check_people"
                    style="@style/add_report_edittext" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/shape_listview_year_bg" />
            <!--巡查时间-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/inspect_report_time"
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_time" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@id/inspect_report_time"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:drawablePadding="2dp"
                        android:drawableRight="@drawable/data"
                        android:gravity="right|center_vertical"
                        android:text="@string/begin_time"
                        android:textColor="@color/des_text_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_listview_year_bg" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:drawablePadding="2dp"
                        android:drawableRight="@drawable/data"
                        android:gravity="right|center_vertical"
                        android:text="@string/end_time"
                        android:textColor="@color/des_text_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <!--报告名称-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inpsect_report_name" />

                <EditText
                    android:id="@+id/edit_inpsect_report_namee"
                    style="@style/add_report_edittext" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/shape_listview_year_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_message" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="192dp"
                android:background="@color/white"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="176dp"
                    android:background="#f9f9f9"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <EditText
                        android:id="@+id/edit_report_msg"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:gravity="top|left"
                        android:hint="@string/pls_enter_msg"
                        android:inputType="textMultiLine"
                        android:paddingTop="16dp"
                        android:textColor="@color/main_text_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/img_edit_report"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_report_msg"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/shape_listview_year_bg" />

                    <GridView
                        android:id="@+id/grid_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/img_edit_report"
                        android:numColumns="4">

                    </GridView>

                </RelativeLayout>
            </LinearLayout>
            <!--是否回访-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:drawableLeft="@drawable/editcolumn"
                    android:text="@string/inspect_report_is_need_recheck" />>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_radio"
                        android:drawablePadding="2dp"
                        android:paddingLeft="10dp"
                        android:text="@string/yes" />

                    <RadioButton
                        android:id="@+id/radio_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_radio"
                        android:drawablePadding="2dp"
                        android:paddingLeft="10dp"
                        android:text="@string/no" />
                </RadioGroup>

            </RelativeLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/shape_listview_year_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/add_report_lab"
                    android:text="@string/inspect_report_message" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/data"
                    android:gravity="right|center_vertical"
                    android:text="@string/enter_time"
                    android:textColor="@color/des_text_color"
                    android:textSize="14sp" />
            </RelativeLayout>


            <Button
                android:id="@+id/btn_add_report_submit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_submit_bg"
                android:elevation="0dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="16sp"></Button>

        </LinearLayout>
    </ScrollView>

</LinearLayout>