<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lab_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="32dp"
        android:text="2017-10-02"
        android:textColor="@color/hit_text_color"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/default_head" />

            <TextView
                android:id="@+id/lab_name"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="张三丰"
                android:textColor="@color/des_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialogleft"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="23dp"
            android:paddingRight="16dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/lab_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是符合的，请大人明察"
                android:textColor="@color/main_text_color"
                android:textSize="14sp" />

            <GridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/img_edit_report"
                android:layout_marginTop="16dp"
                android:numColumns="4"></GridView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>