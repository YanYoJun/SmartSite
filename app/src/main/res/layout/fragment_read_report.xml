<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            style="@style/read_report_lab"
            android:text="@string/inspect_report_address_read" />

        <TextView
            android:id="@+id/inspect_report_address"
            style="@style/read_report_msg_lab"
            android:text="光谷大道金融港" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            style="@style/read_report_lab"
            android:text="@string/inspect_report_company_read" />

        <TextView
            android:id="@+id/inspect_report_company"
            style="@style/read_report_msg_lab"
            android:text="武汉巡查有限公司" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            style="@style/read_report_lab"
            android:text="@string/inspect_report_status_read" />

        <TextView
            android:id="@+id/inspect_report_status"
            style="@style/read_report_msg_lab"
            android:text="报告中" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            style="@style/read_report_lab"
            android:text="@string/inspect_report_types_read" />

        <TextView
            android:id="@+id/inspect_report_types"
            style="@style/read_report_msg_lab"
            android:text="工地巡查报告" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            style="@style/read_report_lab"
            android:text="@string/inspect_report_build_company_read" />

        <TextView
            android:id="@+id/inspect_report_build_company_read"
            style="@style/read_report_msg_lab"
            android:text="武汉建设有限公司" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            style="@style/read_report_lab"
            android:text="@string/inspect_report_construction_company_read" />

        <TextView
            android:id="@+id/inspect_report_construction_company"
            style="@style/read_report_msg_lab"
            android:text="武汉施工有限公司" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            style="@style/read_report_lab"
            android:text="@string/inspect_report_supervision_company_read" />

        <TextView
            android:id="@+id/inspect_report_supervision_company"
            style="@style/read_report_msg_lab"
            android:text="武汉监理有限公司" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:src="@drawable/shape_listview_year_bg" />

    <TextView
        android:id="@+id/lab_sub_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2017-09-29"
        android:textColor="@color/hit_text_color"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_head_send_report"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/default_head" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="张三丰"
                android:textColor="@color/des_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialogleft"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="23dp"
            android:paddingRight="16dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inspect_report_check_people_read"
                    android:textColor="@color/lab_add_item"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/inspect_report_check_people_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="张三、李四、王五"
                    android:textColor="@color/main_text_color"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/inspect_report_time_read"
                    android:textColor="@color/lab_add_item"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lab_begin_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="2017-09-24 10:30"
                        android:textColor="@color/main_text_color"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/lab_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:text="2017-09-24 18:00"
                        android:textColor="@color/main_text_color"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/shape_listview_year_bg" />

            <TextView
                android:id="@+id/lab_report_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="光谷中心城违章报告"
                android:textColor="@color/main_text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="在光谷中心城1号工地发现违章行为，请尽快查清"
                android:textColor="@color/main_text_color"
                android:textSize="14sp" />

            <GridView
                android:id="@+id/grid_view_source_report_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/img_edit_report"
                android:layout_marginTop="16dp"
                android:numColumns="4"></GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="下次回访时间：2017年11月25日"
                android:textColor="@color/des_text_color"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>