<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background">

    <include layout="@layout/layout_toolbar_one_icon"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_icon"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="区域月度综合排名" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_paiming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2017年10月"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/date"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/droparrow"
                        android:layout_toRightOf="@id/date"
                        android:paddingLeft="8dp"
                        android:visibility="invisible"
                        android:paddingRight="8dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/droparrow"
                        android:paddingLeft="8dp"
                        android:id="@+id/rank"
                        android:visibility="invisible"
                        android:paddingRight="12dp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="AQI"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:layout_toLeftOf="@id/rank"
                        android:id="@+id/name"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="16dp"
                    android:background="@color/gray_9999"/>
                <com.isoftstone.smartsite.model.tripartite.view.MyListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:id="@+id/lv"></com.isoftstone.smartsite.model.tripartite.view.MyListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_icon"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="优良天气占比" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_youliang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2017年10月"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/youliang_datedate"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/droparrow"
                        android:layout_toRightOf="@id/youliang_datedate"
                        android:paddingLeft="8dp"
                        android:visibility="invisible"
                        android:paddingRight="8dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/droparrow"
                        android:paddingLeft="8dp"
                        android:id="@+id/youliang_rank"
                        android:visibility="invisible"
                        android:paddingRight="12dp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="AQI"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:layout_toLeftOf="@id/youliang_rank"
                        android:id="@+id/youliang_name"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="16dp"
                    android:background="@color/gray_9999"/>
            </LinearLayout>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_above="@+id/seekBar1"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_icon"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="AQI变化趋势同期对比" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_tongqi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2017年10月"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/tongqi_date"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/droparrow"
                        android:layout_toRightOf="@id/tongqi_date"
                        android:paddingLeft="8dp"
                        android:visibility="invisible"
                        android:paddingRight="8dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/droparrow"
                        android:paddingLeft="8dp"
                        android:id="@+id/tongqi_rank"
                        android:visibility="invisible"
                        android:paddingRight="12dp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="AQI"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:layout_toLeftOf="@id/tongqi_rank"
                        android:id="@+id/tongqi_name"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="16dp"
                    android:background="@color/gray_9999"/>
            </LinearLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart3"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_above="@+id/seekBar1"
                android:background="@android:color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>