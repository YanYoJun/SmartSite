<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <ImageView
        android:id="@+id/iv_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="10dp"
        android:src="@drawable/closeicon"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardElevation="10px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#f9f9f9"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="设备编号:"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_9999"/>
                <TextView
                    android:id="@+id/tv_device_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="130965"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tv_isonline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线"
                    android:textSize="12sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/gray_f2f2"
                    android:background="@drawable/shape_map_online"/>
                <TextView
                    android:id="@+id/tv_device_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:text="安装日期: 2017-10-15"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_9999"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="18dp"
                    android:src="@drawable/site"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="东湖高新区光谷六路"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_9999"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#f9f9f9">
                <LinearLayout
                    android:id="@+id/video"
                    android:background="@drawable/selector_devices_press"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_video"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/time"/>
                    <TextView
                        android:id="@+id/tv_video"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:text="实时视频"/>
                </LinearLayout>

                <View
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:background="@color/gray_f2f2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    ></View>

                <LinearLayout
                    android:id="@+id/history"
                    android:background="@drawable/selector_devices_press"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_history"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/history"/>
                    <TextView
                        android:id="@+id/tv_history"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:text="历史监控"/>
                </LinearLayout>

                <View
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:background="@color/gray_f2f2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    ></View>

                <LinearLayout
                    android:id="@+id/gallery"
                    android:background="@drawable/selector_devices_press"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_gallery"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/capture"/>
                    <TextView
                        android:id="@+id/tv_gallery"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:text="视频抓拍"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        />

</LinearLayout>